{% trans_default_domain 'message' %}

{% block title %}
    Login - {{ parent() }}
{% endblock %}

{% block body %}
<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <div class="form-group">
        <div class="col-sm-6 col-md-6 control-label"><label for="_username">Nom d'utilisateur :</label></div>
        <div class="col-sm-6 col-md-6 "><input type="text" value="{{ last_username }}" name="_username" id="inputUsername" class="form-control" placeholder="Username" required autofocus></div>
    </div>
    <div class="form-group">
        <div class="col-sm-6 col-md-6 control-label"><label for="_password">Mot de passe :</label></div>
        <div class="col-sm-6 col-md-6"><input type="password" name="_password" id="inputPassword" class="form-control" placeholder="Password" required></div>
    </div>
    <div class="form-group">
        <div class="col-sm-6 col-md-6 control-label"><label for="_remember_me">Se souvenir de moi :</label></div>
        <div class="col-sm-6 col-md-6"> <input class="form-control" style="max-width:10px" type="checkbox" id="remember_me" name="_remember_me" checked /></div>
    </div>
    <div class="form-group ">
        <div class="col-sm-12 col-md-12 control-label"><a href="{{ path('imw_create_person') }}">Pas encore de compte ?</a></div>
    </div>
    <div class="form-group ">
        <div class="col-sm-12 col-md-12 control-label"><a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√© ?</a></div>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <button class="btn btn-lg btn-primary" type="submit">
        {{ 'lg.connexion.log_in'|trans }}
    </button>
</form>
{% endblock %}
